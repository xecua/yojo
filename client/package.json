{
  "name": "client",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "yarn lint && vue-cli-service build",
    "lint": "vue-cli-service lint -c no-console"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,vue}": [
      "vue-cli-service lint",
      "git add"
    ]
  },
  "dependencies": {
    "@mdi/font": "^5.1.45",
    "axios": "^0.19.2",
    "buefy": "^0.8.17",
    "core-js": "^3.6.4",
    "vue": "^2.6.11"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "~4.3.0",
    "@vue/cli-plugin-eslint": "~4.3.0",
    "@vue/cli-plugin-router": "~4.3.0",
    "@vue/cli-service": "~4.3.0",
    "babel-eslint": "^10.1.0",
    "eslint": "^6.7.2",
    "eslint-plugin-vue": "^6.2.2",
    "stylus": "^0.54.7",
    "stylus-loader": "^3.0.2",
    "vue-template-compiler": "^2.6.11"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "plugins": [
      "vue"
    ],
    "extends": [
      "plugin:vue/recommended",
      "eslint:recommended"
    ],
    "parserOptions": {
      "parser": "babel-eslint"
    },
    "rules": {
      "vue/html-closing-bracket-newline": [
        2,
        {
          "multiline": "never"
        }
      ],
      "vue/no-v-html": 0,
      "no-multi-spaces": 2,
      "func-call-spacing": [
        2,
        "never"
      ],
      "no-unneeded-ternary": 2,
      "quotes": [
        2,
        "single"
      ],
      "no-var": 2,
      "indent": [
        2,
        2
      ],
      "no-extra-parens": 1,
      "semi": [
        2,
        "always"
      ]
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}